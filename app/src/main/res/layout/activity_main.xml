<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="es.jaimepg.wapp.MainActivity">


    <Button
        android:id="@+id/botonEntrar"
        android:onClick="boton_entrar_pulsado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:text="Entrar"
        android:layout_below="@+id/space3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Iniciar sesión"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textStyle="italic"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/editPhone"
        android:textSize="36dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView4"
        android:text="601601601" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Número de teléfono:"
        android:id="@+id/textView4"
        android:paddingTop="10dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="178dp"
        android:id="@+id/imageView"
        android:background="@drawable/wapp_back"
        android:layout_above="@+id/space"
        android:layout_centerHorizontal="true" />

    <Space
        android:layout_width="100px"
        android:layout_height="50px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/space" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Dirección IP del servidor:"
        android:id="@+id/textView5"
        android:paddingTop="10dp"
        android:layout_below="@+id/editPhone"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editIP"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/botonEntrar"
        android:text="192.168.1.200" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Puerto:"
        android:id="@+id/textView6"
        android:paddingTop="10dp"
        android:layout_above="@+id/editIP"
        android:layout_toEndOf="@+id/space2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editPuerto"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:text="8085" />

    <Space
        android:layout_width="50px"
        android:layout_height="20px"
        android:layout_alignTop="@+id/textView6"
        android:layout_toEndOf="@+id/editIP"
        android:id="@+id/space2"
        android:layout_above="@+id/editIP" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_below="@+id/editIP"
        android:layout_alignParentStart="true"
        android:id="@+id/space3"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
